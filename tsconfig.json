{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "strictPropertyInitialization": false,
    "paths": {
      "*": ["*"]
    }
  },
  "rules": {
    "import/no-unresolved": "error"
  },
  "lib": ["es2021"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
